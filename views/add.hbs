<h1>Добавить изделие</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required >
    <label for="title">Наименование изделия</label>
    <span class="helper-text" data-error="Введите название изделия"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required>
    <label for="price"> Цена изделия</label>
    <span class="helper-text" data-error="Введите цену изделия" min="1"></span>
    </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required>
    <label for="img">URL Картинки</label>
    <span class="helper-text" data-error="Введите URL картинки"></span>  
  </div>

  <button class="btn btn-primary">Добавить изделие</button>
</form>


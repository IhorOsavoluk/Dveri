<h1>Каталог изделий</h1>

{{#if courses.length}}
{{#each courses}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content">
        <span class="card-title"> {{title}} </span>
        <p class="price"> {{price}} </p>
      </div>
      <div class="card-action action">
        <a href="/courses/{{id}}"" target="_blank">Информация об изделии</a>
        <a href="/courses/{{id}}/edit?allow=true">Редактировать Информацию об изделии</a>
        <form action="/card/add" method="POST">
        <input type="hidden" name="id" value="{{id}}"
        <hr>
        <button type="submit" class="btn btn-primary">Купить</button>


        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>Изделия пока не добавленны</p>
{{/if}}
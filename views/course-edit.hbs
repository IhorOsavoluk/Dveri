<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value=" {{ course.title }} ">
    <label for="title">Наименование изделия</label>
    <span class="helper-text" data-error="Введите название изделия"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required value="{{course.price}}"> 
    <label for="price"> Цена изделия</label>
    <span class="helper-text" data-error="Введите цену изделия" min="1"></span>
    </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
    <label for="img">URL Картинки</label>
    <span class="helper-text" data-error="Введите URL картинки"></span>  
  </div>

    <input type="hidden" name="id" value="{{course.id}}" >
  <button type="submit" class="btn btn-primary">Редактировать изделие</button>


</form>
<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
  <button type="submit"  class=" btn red">Удалить изделие</button>


</form>

